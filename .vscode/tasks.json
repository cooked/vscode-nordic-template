{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [

		// Build targets
		{
			"label": "Build CoCo @ CoCo",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"build",
				"-p", "always",
				"-b", "coco",
				"${workspaceFolder}/samples/app-coco"
			]
		},

		// Flash targets
		{
			"label": "Flash sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"flash"
			],
		},

		// Debug targets
		{
			"label": "Debug sample",
			"type": "shell",
			"group": "build",
			"command": "west",
			"args": [
				"debug",
			],
		},
	]
}